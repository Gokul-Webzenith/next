{

 
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",

    "moduleResolution": "bundler",

    "declaration": true,
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node"],

    "noEmitOnError": false
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
